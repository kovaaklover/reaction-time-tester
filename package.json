{
  "name": "reaction-time-tester",
  "version": "8.0.0",
  "description": "A simple reaction time test app",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.41",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.yourname.reactiontimetester",
    "productName": "Reaction Time Tester",
    "icon": "build/icon.ico",
    "files": [
      "dist/**/*",
      "index.html",
      "main.js",
      "styles/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "."
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Reaction Time Tester"
    }
  }
}
